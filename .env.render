# ConsentHub Backend - Render Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=10000

# Security
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here
INTERNAL_API_KEY=your-internal-api-key-here

# Database (Set this in Render Dashboard)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/consenthub

# Frontend URL (Auto-configured by render.yaml)
# FRONTEND_URL=https://your-frontend.onrender.com

# Service URLs (Internal - for microservice communication)
CONSENT_SERVICE_URL=http://localhost:3001
PREFERENCE_SERVICE_URL=http://localhost:3002
PRIVACY_NOTICE_SERVICE_URL=http://localhost:3003
AGREEMENT_SERVICE_URL=http://localhost:3004
EVENT_SERVICE_URL=http://localhost:3005
PARTY_SERVICE_URL=http://localhost:3006
AUTH_SERVICE_URL=http://localhost:3007
DSAR_SERVICE_URL=http://localhost:3008

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
